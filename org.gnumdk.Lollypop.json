{
    "app-id": "org.gnumdk.Lollypop",
    "branch": "0.9.112",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.20",
    "sdk": "org.gnome.Sdk",
    "command": "lollypop",
    "rename-desktop-file": "lollypop.desktop",
    "desktop-file-name-prefix": "",
    "finish-args": [
      "--share=ipc",
      "--share=network",
      "--socket=x11",
      "--socket=wayland",
      "--socket=pulseaudio",
      "--filesystem=home",
      "--talk-name=org.freedesktop.Notifications"
    ],
    "modules": [{
      "name": "automake",
      "sources": [{
        "type": "git",
        "branch": "v1.15",
        "url": "http://git.savannah.gnu.org/r/automake.git"
      }]
    },{
      "name": "gmime",
      "sources": [{
        "type": "git",
        "branch": "GMIME_2_6_20",
        "url": "https://github.com/GNOME/gmime"
      }]
    },{
      "name": "totel-pl-parser",
      "sources": [{
        "type": "git",
        "branch": "V_3_10_6",
        "url": "https://github.com/GNOME/totem-pl-parser"
      }]
    },{
      "name": "lollypop",
      "make-install-args": ["prefix=/app"],
      "sources": [{
          "type": "git",
          "url": "https://github.com/gnumdk/lollypop"
        }]
    }]
}
