{
    "app-id": "org.gnumdk.Lollypop",
    "branch": "0.9.112",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.20",
    "sdk": "org.gnome.Sdk",
    "command": "lollypop",
    "copy-icon": true,
    "rename-icon": "lollypop",
    "rename-desktop-file": "lollypop.desktop",
    "desktop-file-name-prefix": "",
    "finish-args": [
      "--share=ipc",
      "--share=network",
      "--socket=x11",
      "--socket=wayland",
      "--socket=pulseaudio",
      "--filesystem=home",
      "--talk-name=org.freedesktop.Notifications",
      "--talk-name=org.freedesktop.DBus",
      "--own-name=org.gnumdk.Lollypop"
    ],
    "modules": [{
      "name" :"pylast",
      "sources": [{
        "type": "script",
        "commands": ["pip3 install pylast"]
      }]
    },{
      "name": "gmime",
      "sources": [{
        "type": "git",
        "branch": "GMIME_2_6_20",
        "url": "https://github.com/GNOME/gmime"
      },{
        "type": "patch",
        "path": "gmime-autogen.patch"

      }]
    },{
      "name": "totel-pl-parser",
      "sources": [{
        "type": "git",
        "branch": "V_3_10_6",
        "url": "https://github.com/GNOME/totem-pl-parser"
      }]
    },{
      "name": "lollypop",
      "make-install-args": ["prefix=/app"],
      "sources": [{
          "type": "git",
          "url": "https://github.com/gnumdk/lollypop"
        }]
    }]
}
